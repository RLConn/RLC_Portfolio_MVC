<div id="Factorial" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Factorials</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <p>A Factorial is the product of an integer and all of the integers below it.</p>
                    <p> Enter a number below to see the factorial result.</p>
                    <form>
                        <div class="input-group col-xs-6">
                            <span class="input-group-addon" style="color:darkred; font-weight: bold; font-style: italic">Number</span>
                            <input id="FactN" type="number" min="1" class="form-control" name="FactN" placeholder="Enter">
                        </div>
                    </form>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <button class="btn btn-warning" id="btnFact">Calculate</button>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-success" id="FactbtnShow">Show Code</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div id="FactShow">
                            <pre class="brush: js">
                                    $("#btnFact").click(function () {
                                        //Step 1: Get the data
                                        var number1 = Number($("#FactN").val());
                                        //Step 2: Do my calculation
                                        var result = Factorial(number1);
                                        //Step 3: Output the result
                                        $("#factResult").text(result);
                                    });
                                    function Factorial(number) {
                                        //The for loop
                                        for (var loop = number - 1; loop > 1; loop--) {
                                            number *= loop;
                                        }
                                        return number;
                                    }
                            </pre>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-3" style="color:darkred; font-weight: bold; font-style: italic">Factorial:</div>
                    <div class="col-sm-3">
                        <p id="factResult"></p>
                    </div>
                </div>
                <hr />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
