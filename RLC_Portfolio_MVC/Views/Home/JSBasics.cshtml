                                        });
                                        function FizzBuzz(fiza, fizb) {
                                            var buza = "";
                                            var fizz = false;
                                            var buzz = false;
                                            for (var i = 1; i <= 100; i++) {
                                                fizz = (i % fiza == 0);
                                                buzz = (i % fizb == 0);
                                                if (fizz && buzz) {
                                                    buza += "FizzBuzz, ";
                                                } else if (fizz) {
                                                    buza += "Fizz, ";
                                                } else if (buzz) {
                                                    buza += "Buzz, ";
                                                } else buza += i + ", ";

                                            }
                                            return buza.substr(0, buza.length - 2);
                                        }   
                                    </pre>
                                </div>
                            </div>
